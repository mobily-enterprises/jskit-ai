{
  "all": true,
  "check-coverage": true,
  "per-file": true,
  "branches": 100,
  "functions": 100,
  "lines": 100,
  "statements": 100,
  "reporter": ["text-summary", "lcov"],
  "exclude": [
    "coverage/**",
    "coverage-client/**",
    "coverage-vue/**",
    "dist/**",
    "node_modules/**",
    "tests/**",
    "src/**",
    "migrations/**",
    "seeds/**",
    "server.js",
    "bin/server.js",
    "knexfile.cjs",
    "vite.config.mjs",
    "vitest.vue.config.mjs",
    "playwright.config.mjs",
    "eslint.config.mjs"
  ]
}
